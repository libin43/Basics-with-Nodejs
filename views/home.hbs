<header>
  <nav class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Flipcart</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
          </li>
        </ul>
      </div>
    </div>
    <form action="/logout" class="mx-3 d-flex" role="search">

      <button class="btn btn-outline-danger mt-2 " type="submit">Logout</button>
    </form>
  </nav>

</header>


<section>
  <div class="container mt-5">
    <div class="row">

      {{#each products}}
      <div class="col-md-3">
        <div class="card" style="width: 18rem;">
          <img src="{{this.image}}" class="img-fluid card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.category}}</p>
            <a href="#" class="btn btn-primary">Add to Cart</a>
          </div>
        </div>
      </div>

      {{/each}}

    </div>
  </div>
</section>